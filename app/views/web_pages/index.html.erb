<p id="notice"><%= notice %></p>

<h1>Listing Web Pages</h1>

<table id="web-pages" class="tablesorter">
  <thead>
    <tr>
      <th>Url</th>
      <th>Layout pattern</th>
      <th>Matching result</th>
      <!-- <th>Capture image path</th> -->
      <!-- <th>Separated image path</th> -->
      <!-- <th>Note</th> -->
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @web_pages.each do |web_page| %>
      <tr>
        <td>
            <% url = web_page.url || '' %>
            <%= link_to url, url %>
        </td>
        <td><%= web_page.layout_pattern ? web_page.layout_pattern.name : '' %></td>
        <td><%= web_page.matching_result ? 'T' + web_page.matching_result.to_s : '' %></td>
        <!--
        <td>
            <% url = web_page.capture_image_path || '' %>
            <%= link_to url, url %>
        </td>
        -->
        <!--
        <td>
          <% url = web_page.separated_image_path || '' %>
          <%= link_to url, url %>
        </td>
        -->
        <!-- <td><%= web_page.note %></td> -->
        <td><%= link_to 'Show', web_page %></td>
        <td><%= link_to 'Edit', edit_web_page_path(web_page) %></td>
        <td><%= link_to 'Destroy', web_page, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

